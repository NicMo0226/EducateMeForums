@model EducateMeForums.ViewModels.Forum.AddForumModel

<div class="container content">
    <div class="row sectionHeader">
        <h3 class="sectionHeading">
            Create New Forum
        </h3>
    </div>
    <div class="row">
        <div id="createForumSection col-md-10">
            <div class="col-md-8">
            <form asp-action="AddForum" method="post" id="createForumForm">
                <div class="form-group">
                    <label asp-for="Title">Forum Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Choose forum title"/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                        <textarea asp-for="Description" class="form-control" placeholder="Write a brief description of the subject"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div id="upload">
                    <label>Upload Forum Image</label>
                        <br />
                    <label class="btn btn-default btn-file">
                                     Browse <input asp-for="ImageUpload" typeof="file" style="display: none" />
                    </label>
                </div>
                <button type="submit" id="btn-profile" class="btn btn-default">Create Forum</button>
                   
            </form>
            </div>
        </div>
    </div>
</div>
