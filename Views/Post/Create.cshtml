@model EducateMeForums.ViewModels.Post.NewPostModel

<div class="container content">
    <div class="row sectionHeader">
        <div class="col-md-12">
            <h3 class="sectionHeading noBorder"></h3>
            New Post in Forum - @Model.ForumName
            <div class="forumLogo" style="background-image: url(@Model.ImageUrl)"></div>
            <span id="headingBtn">
                <a asp-controller="Forum"
                   asp-action="Topic"
                   asp-route-id="@Model.ForumId"
                   class="btn btn-back">
                    Back to @Model.ForumName
                </a>
            </span>
        </div>
       </div>

        <div class="row">
            <div class="col-md-12">
                <div class="createPostSection">
                    <div class="authorBlock">
                        You're submitting this post as <strong>@Model.AuthorName</strong>
                    </div>
                    <form asp-action="AddPost" method="post" id="addPostForm">
                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PostContent"></label>
                            <textarea asp-for="PostContent" class="form-control" rows="20"></textarea>
                        </div>
                        <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
                            Submit Post
                        </button>
                        <input asp-for="ForumId" type="hidden" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>